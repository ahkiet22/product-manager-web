extends ../../layouts/auth.pug
include ../../mixins/alert.pug

block main 
  +alert-error(5000)

  .container.my-5
    .row.justify-content-center
      .col-md-6.col-lg-5
        .card.shadow-lg
          .card-body.p-5
            h3.text-center.mb-4.font-weight-bold Admin Login
            
            form(
                action=`${prefixAdmin}/auth/login`
                method="POST"
            )
              .form-group.mb-4
                label.text-muted(for="email") Email Address
                .input-group
                  .input-group-prepend
                    span.input-group-text
                      i.fas.fa-envelope
                  input(
                    type="email"
                    class="form-control"
                    id="email"
                    name="email"
                    placeholder="Enter your email"
                    required
                  )
              .form-group.mb-4
                label.text-muted(for="password") Password
                .input-group
                  .input-group-prepend
                    span.input-group-text
                      i.fas.fa-lock
                  input(
                    type="password"
                    class="form-control" 
                    id="password"
                    name="password"
                    placeholder="Enter your password"
                    required
                  )
                  span.input-group-text.text-right.display-password
                    i.fas.fa-eye-slash
                      
              .form-group.text-center
                button(
                  type="submit"
                  class="btn btn-primary btn-block w-100"
                ) Login

  script(type="module", src="/js/script") 