extends ../../layouts/default.pug

block main

  h1 Danh mục sản phẩm
  .card.mb-3 
    .card-header Danh mục sản phẩm 
    .card-body
      .row 
        .col-8
        .col-4 
          a(
            href=`${prefixAdmin}/products-category/create`
            class="btn btn-outline-success"
          ) + Thêm mới

      table(
        class="table table-hover talble-sm"
        checkbox-multi
      ) 
        thead 
          tr
            th 
              input(type="checkbox" name="checkall")
            th STT
            th Hình ảnh
            th Tiêu đề
            th Vị trí
            th Trạng thái
            th Aciton
        
        tbody
          each item, index in record 
            tr
              td 
                input(type="checkbox" name="id" value=item.id)
              td #{index + 1}
              td  
                img(src=item.thumbnail alt=item.title width="100px" height="auto")
              td #{item.title}
              td
                input(type="number" value=item.position style="width: 60px" min="1" name="position")
              td
                if(item.status == "active")
                  a(
                    href="javascript:;"
                    data-status=item.status
                    data-id=item.id
                    button-change-status
                    class="badge badge-success"
                  ) Hoạt động 
                else 
                  a(
                    href="javascript:;"
                    data-status=item.status
                    data-id=item.id
                    button-change-status
                    class="badge badge-danger"
                  ) Dừng hoạt động
              td 
                a(href=`${prefixAdmin}/products-category/detail/${item.id}` class="btn btn-secondary btn-sm mr-1") Chi tiết
                if(statusBin == "bin")
                  button(class="btn btn-warning btn-sm" button-restore data-id=item.id) Khôi phục
                else 
                  a(href=`${prefixAdmin}/products-category/edit/${item.id}` class="btn btn-warning btn-sm") Sửa
                button(class="btn btn-danger btn-sm ml-1" button-delete data-id=item.id) Xóa