extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
  .container.my-4
    .row 
      .col-14  
        +box-head("Checkout")

    .row.mb-4
      .col-12
        .card.shadow-sm
          .card-header.bg-light
            h5.mb-0 Order Summary
          .card-body     
            table(class="table table-hover")
              thead.thead-light
                tr.text-center
                  th(scope="col") #
                  th(scope="col") Product
                  th(scope="col") Details
                  th(scope="col") Price
                  th(scope="col") Quantity
                  th(scope="col") Total
              tbody 
                if (cart.products.length > 0)
                  each item, index in cart.products 
                    tr.align-middle.text-center
                      td #{index + 1} 
                      td 
                        img(
                          src=item.productInfo.thumbnail
                          alt=item.productInfo.title
                          width="100px"
                          class="img-thumbnail"
                        )
                      td 
                        h6.mb-0 #{item.productInfo.title}
                        small.text-muted SKU: #{item.productInfo._id}
                      td 
                        span.font-weight-bold $#{item.productInfo.priceNew}
                        if item.productInfo.price
                          br
                          small.text-decoration-line-through.text-muted $#{item.productInfo.price}
                      td #{item.quantity}
                      td.font-weight-bold $#{item.totalPrice}
                else 
                  tr 
                    td(
                      colspan="6"
                      class="text-center py-5"
                    )
                      i.fas.fa-shopping-cart.fa-3x.text-muted.mb-3
                      p.lead.mb-0 Your cart is empty
                      a(href="/products" class="btn btn-outline-primary mt-3") Continue Shopping

          if (cart.products.length > 0)
            .card-footer.bg-light
              .row
                .col-md-6.offset-md-6
                  table.table.table-sm.mb-0
                    tr
                      td Subtotal:
                      td.text-right $#{cart.totalPrice}
                    tr
                      td Shipping:
                      td.text-right #{cart.totalPrice >= 50 ? "Free" : "$5"}
                    tr
                      td Estimated Tax:
                      td.text-right $0
                    tr
                      td.h5 Total:
                      td.text-right.h5 $#{cart.totalPrice >= 50 ? cart.totalPrice : cart.totalPrice + 5}

    if (cart.products.length > 0)
      .col-12.mt-4
        .card.shadow-sm
          .card-header.bg-light
            h5.mb-0 Shipping Information
          .card-body
            form(
              action="/checkout/order"
              method="POST"
            )
              .row
                .col-md-6
                  div(class="form-group")
                    label(for="fullName") 
                      i.fas.fa-user.mr-2
                      | Full Name
                    input(
                      type="text"
                      class="form-control"
                      id="fullName"
                      name="fullName"
                      placeholder="Enter your full name"
                      required
                    )
                .col-md-6
                  div(class="form-group")
                    label(for="phone")
                      i.fas.fa-phone.mr-2
                      | Phone Number
                    input(
                      type="tel"
                      class="form-control"
                      id="phone"
                      name="phone"
                      placeholder="Enter your phone number"
                      required
                    )
              .row
                .col-12
                  div(class="form-group")
                    label(for="address")
                      i.fas.fa-map-marker-alt.mr-2
                      | Delivery Address
                    textarea(
                      class="form-control"
                      id="address"
                      name="address"
                      rows="3"
                      placeholder="Enter your complete delivery address"
                      required
                    )
                              
              .row.mt-4
                .col-12
                  .alert.alert-info.d-flex.align-items-center
                    i.fas.fa-info-circle.fa-lg.mr-3
                    div
                      | By placing this order, you agree to our 
                      a(href="https://hotro.tiki.vn/s/article/dieu-khoan-su-dung") Terms of Service
                      |  and 
                      a(href="https://tiki.vn/thong-tin/privacy-policy") Privacy Policy

                  button(
                    type="submit"
                    class="btn btn-primary btn-lg btn-block"
                  )
                    i.fas.fa-lock.mr-2
                    | Place Order Securely