extends ../../layouts/default.pug

block main
  .container.py-5
    .row.justify-content-center
      .col-lg-6.col-md-8
        .card.shadow-sm
          .card-header.bg-white.py-4.text-center.border-0
            h4.mb-0 Forgot Password
            p.text-muted.mb-0 Enter your email address to reset your password

          .card-body.p-4
            form(action="/user/password/forgot" method="POST")
              .mb-4
                label.form-label(for="email")
                  i.fas.fa-envelope.me-2.text-muted
                  | Email Address
                input.form-control.form-control-lg(
                  type="email"
                  id="email"
                  name="email"
                  placeholder="Enter your email"
                  required
                )
              
              .d-grid.gap-2
                button.btn.btn-primary.btn-lg(type="submit")
                  i.fas.fa-paper-plane.me-2
                  | Send OTP

          .card-footer.bg-light.py-3.text-center
            .row
              .col-6.border-end
                a.text-decoration-none(href="/user/login")
                  i.fas.fa-arrow-left.me-2
                  | Back to Login
              .col-6
                a.text-decoration-none(href="/user/register")
                  | Create Account
                  i.fas.fa-arrow-right.ms-2

    // Instructions
    .row.justify-content-center.mt-5
      .col-lg-8
        .card.border-0.bg-light
          .card-body.p-4
            h5.mb-4 
              i.fas.fa-info-circle.me-2.text-primary
              | Password Reset Instructions

            .row.text-center
              .col-md-4.mb-4.mb-md-0
                .display-6.text-primary.mb-3
                  i.fas.fa-envelope-open-text
                h6.fw-bold Step 1
                p.text-muted.small Enter your registered email address above.

              .col-md-4.mb-4.mb-md-0
                .display-6.text-primary.mb-3
                  i.fas.fa-key
                h6.fw-bold Step 2
                p.text-muted.small Check your email for the password reset OTP.

              .col-md-4
                .display-6.text-primary.mb-3
                  i.fas.fa-lock   
                h6.fw-bold Step 3
                p.text-muted.small Create your new password

            hr.my-4

            .alert.alert-warning.mb-0
              h6.alert-heading.mb-1
                i.fas.fa-exclamation-triangle.me-2
                | Important Notes:
              ul.mb-0.small
                li The reset link will expire after 24 hours.
                li Make sure to check your spam folder if you don't receive the email.
                li Contact support if you need additional assistance.

    // Contact Support
    .row.justify-content-center.mt-4
      .col-lg-6.text-center
        p.text-muted.mb-0 Having trouble? 
          a.text-decoration-none(href="#") Contact Support
          |  or call us at 
          span.text-primary 1-800-123-4567